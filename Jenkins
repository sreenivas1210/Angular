pipeline {
  agent any

  stages {
   
    }

    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build -- --prod'
      }
    }

    stage('Package') {
      steps {
        sh 'mkdir dist'
        sh 'cp -r ./dist/* dist'
      }
    }

    stage('Deploy') {
      steps {
        withAWS(credentials: '274253346253', region: 'US East (N. Virginia) us-east-1') {
          sh 'aws s3 sync dist s3://vasuui'
        }
      }
    }
  }
}
